{
  "$schema": "http://json.schemastore.org/template",
  "author": "T3mmy",
  "classifications": [
    "Web",
    "API"
  ],
  "identity": "T3mmy.VSA.Template",
  "name": "T3mmyVSA",
  "description": "A robust ASP.NET Core Web API template implementing Vertical Slice Architecture, featuring pre-configured Serilog logging, Scrutor for DI, EF Core 10 with SQL Server, and API Versioning. Ideal for building scalable and maintainable APIs.",
  "shortName": "t3mmyvsa",
  "sourceName": "T3mmyvsa",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/[Bb]in/**",
            "**/[Oo]bj/**",
            ".git/**",
            "**/.git/**",
            "**/.idea/**",
            "**/.vscode/**",
            "logs/**",
            "**/*.user",
            "RULES.md"
          ],
          "rename": {
            ".github/workflows/_deploy-smarteraspnet.yml": ".github/workflows/deploy-smarteraspnet.yml"
          }
        }
      ]
    }
  ],
  "postActions": [
    {
      "actionId": "3A63A278-6E78-4D20-B5DC-D8F965E4750A",
      "description": "Installing T3mmyVSA CLI Tool...",
      "args": {
        "executable": "dotnet",
        "args": "tool install -g T3mmyvsa.CLI"
      },
      "continueOnError": true,
      "manualInstructions": [
        {
          "text": "The project was created successfully. To use the scaffolding features, run 'dotnet tool install -g T3mmyvsa.CLI'."
        }
      ]
    }
  ]
}